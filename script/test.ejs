/* global Promise */

var Flickr = require('..');
var assert = require('assert');
var sinon = require('sinon');

describe('<%= method %>', function () {
	var flickr;

	beforeEach(function () {
		flickr = new Flickr();
	});

<%_ Object.keys(args).forEach(function (arg) { _%>
	it('requires "<%= arg %>"', function () {

		assert.throws(function () {
			<%= method %>(<%- toObject(without(args, arg)) %>);
		}, function (err) {
			return err.message === 'Missing required argument "<%= arg %>"';
		});

	});

<%_ }); _%>
	it('calls the correct API method', function () {
		var request = sinon.stub(<%= namespace(method) %>, '_').returns(Promise.resolve());

		return <%= method %>(<%- toObject(args) %>)
		.then(function () {
			sinon.assert.calledOnce(request);
			sinon.assert.calledWith(request, '<%= method %>', <%- toObject(args) %>);
		});
	});

});
